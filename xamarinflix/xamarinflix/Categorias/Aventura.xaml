<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xamarinflix.Categorias.Aventura"
             Title="Aventura"
             BackgroundColor="#2f2f30">
    
    
    <ContentPage.Content>
        <StackLayout>

            <Image x:Name="logotipo" />

            <ScrollView>
                <Grid RowDefinitions="300, 300, 300" ColumnDefinitions="*, *" Padding="5">
                    <ImageButton Grid.Column="0" Grid.Row="0" x:Name="btnCapitanMarvel" Clicked="btnCapitanMarvel_Clicked"/>
                    <ImageButton Grid.Column="1" Grid.Row="0" x:Name="btnPanteraNegra" />
                    <ImageButton Grid.Column="0" Grid.Row="1" x:Name="btnShazam" />
                    <ImageButton Grid.Column="1" Grid.Row="1" x:Name="btnAladdin" />
                    <ImageButton Grid.Column="0" Grid.Row="2" x:Name="btnDumbo" />
                    <ImageButton Grid.Column="1" Grid.Row="2" x:Name="btnVef" />
                </Grid>
            </ScrollView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>